extends layout

block content
  h1= title
  p Welcome to #{title}

  form(method="post" enctype='multipart/form-data' action='/api/imageupload')
    p Title of Image
      input(type='text' name='title' placeholder='title' required)
    p Please specify a file or set of files:
      br
      input(type='file' name='image' required)
    div
      input(type='submit' value='Upload')

  h2 All Images
  ul
    each image in imageuploads
      li
        a(href='imageupload/#{image.id}')= image.name
